{
	"compilerOptions": {
		"esModuleInterop": true,
		"target": "es2022",
		"module": "commonjs",
		"lib": ["ES2022"],
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"alwaysStrict": true,
    	"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"strictPropertyInitialization": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.data.ts"]
}
